<atlassian-plugin key="${atlassian.plugin.key}" name="${project.name}" plugins-version="2">
    <plugin-info>
        <description>${project.description}</description>
        <version>${project.version}</version>
        <vendor name="${project.organization.name}" url="${project.organization.url}" />
        <param name="plugin-icon">images/pluginIcon.png</param>
        <param name="plugin-logo">images/pluginLogo.png</param>

        <param name="atlassian-data-center-compatible">true</param>
    </plugin-info>

    <!-- add our i18n resource -->
    <resource type="i18n" name="i18n" location="ru.mail.jira.plugins.groovy.i18n"/>

    <!-- react resources -->
    <web-resource key="react-common">
        <transformation extension="js">
            <transformer key="jsI18n"/>
        </transformation>

        <dependency>com.atlassian.auiplugin:ajs</dependency>
        <dependency>com.atlassian.auiplugin:dialog2</dependency>
        <dependency>com.atlassian.auiplugin:aui-experimental-tooltips</dependency>
        <dependency>com.atlassian.auiplugin:aui-select</dependency>
        <dependency>com.atlassian.auiplugin:aui-select2</dependency>
        <dependency>com.atlassian.auiplugin:aui-toggle</dependency>

        <resource type="download" name="i18n.js" location="/ru/mail/jira/plugins/groovy/i18n.js"/>
        <resource type="download" name="common.js" location="/ru/mail/jira/plugins/groovy/js/common.js"/>
        <resource type="download" name="common.js.map" location="/ru/mail/jira/plugins/groovy/js/common.js.map"/>
    </web-resource>

    <web-resource key="workflow" name="groovy workflow Web Resources">
        <dependency>ru.mail.jira.plugins.groovy:react-common</dependency>

        <resource type="download" name="workflow.js" location="/ru/mail/jira/plugins/groovy/js/workflow.js"/>
        <resource type="download" name="workflow.js.map" location="/ru/mail/jira/plugins/groovy/js/workflow.js.map"/>

        <context>ru.mail.jira.plugins.groovy.workflow</context>
    </web-resource>

    <web-resource key="console-resources" name="groovy console Web Resources">
        <dependency>ru.mail.jira.plugins.groovy:react-common</dependency>

        <resource type="download" name="console.js" location="/ru/mail/jira/plugins/groovy/js/console.js"/>
        <resource type="download" name="console.js.map" location="/ru/mail/jira/plugins/groovy/js/console.js.map"/>

        <context>ru.mail.jira.plugins.groovy.console</context>
    </web-resource>

    <web-resource key="registry-resources" name="groovy script registry Web Resources">
        <dependency>ru.mail.jira.plugins.groovy:react-common</dependency>

        <resource type="download" name="repository.js" location="/ru/mail/jira/plugins/groovy/js/repository.js"/>
        <resource type="download" name="repository.js.map" location="/ru/mail/jira/plugins/groovy/js/repository.js.map"/>

        <context>ru.mail.jira.plugins.groovy.registry</context>
    </web-resource>

    <web-resource key="listeners-resources" name="groovy listeners Web Resources">
        <dependency>ru.mail.jira.plugins.groovy:react-common</dependency>

        <resource type="download" name="listeners.js" location="/ru/mail/jira/plugins/groovy/js/listeners.js"/>
        <resource type="download" name="listeners.js.map" location="/ru/mail/jira/plugins/groovy/js/listeners.js.map"/>

        <context>ru.mail.jira.plugins.groovy.listeners</context>
    </web-resource>

    <web-resource key="audit-resources" name="groovy audit Web Resources">
        <dependency>ru.mail.jira.plugins.groovy:react-common</dependency>

        <resource type="download" name="audit.js" location="/ru/mail/jira/plugins/groovy/js/audit.js"/>
        <resource type="download" name="audit.js.map" location="/ru/mail/jira/plugins/groovy/js/audit.js.map"/>

        <context>ru.mail.jira.plugins.groovy.audit</context>
    </web-resource>

    <web-resource key="rest-resources" name="groovy rest Web Resources">
        <dependency>ru.mail.jira.plugins.groovy:react-common</dependency>

        <resource type="download" name="rest.js" location="/ru/mail/jira/plugins/groovy/js/rest.js"/>
        <resource type="download" name="rest.js.map" location="/ru/mail/jira/plugins/groovy/js/rest.js.map"/>

        <context>ru.mail.jira.plugins.groovy.rest</context>
    </web-resource>

    <web-resource key="fields-resources" name="groovy fields Web Resources">
        <dependency>ru.mail.jira.plugins.groovy:react-common</dependency>

        <resource type="download" name="fields.js" location="/ru/mail/jira/plugins/groovy/js/fields.js"/>
        <resource type="download" name="fields.js.map" location="/ru/mail/jira/plugins/groovy/js/fields.js.map"/>

        <context>ru.mail.jira.plugins.groovy.fields</context>
    </web-resource>

    <web-resource key="cf-resources" name="groovy custom field Web Resources">
        <dependency>ru.mail.jira.plugins.groovy:react-common</dependency>

        <resource type="download" name="cf.js" location="/ru/mail/jira/plugins/groovy/js/cf.js"/>
        <resource type="download" name="cf.js.map" location="/ru/mail/jira/plugins/groovy/js/cf.js.map"/>

        <context>ru.mail.jira.plugins.groovy.cf</context>
    </web-resource>

    <web-resource key="scheduled-resources" name="groovy scheduled Web Resources">
        <dependency>ru.mail.jira.plugins.groovy:react-common</dependency>

        <resource type="download" name="scheduled.js" location="/ru/mail/jira/plugins/groovy/js/scheduled.js"/>
        <resource type="download" name="scheduled.js.map" location="/ru/mail/jira/plugins/groovy/js/scheduled.js.map"/>

        <context>ru.mail.jira.plugins.groovy.scheduled</context>
    </web-resource>

    <web-resource key="extras-resources" name="groovy extras Web Resources">
        <dependency>ru.mail.jira.plugins.groovy:react-common</dependency>

        <resource type="download" name="extras.js" location="/ru/mail/jira/plugins/groovy/js/extras.js"/>
        <resource type="download" name="extras.js.map" location="/ru/mail/jira/plugins/groovy/js/extras.js.map"/>

        <context>ru.mail.jira.plugins.groovy.extras</context>
    </web-resource>

    <!-- end of resources -->

    <rest key="groovyRest" path="/my-groovy" version="1.0">
        <description>Groovy rest module</description>
    </rest>

    <servlet name="Groovy servlet" key="rest-servlet" class="ru.mail.jira.plugins.groovy.servlet.GroovyServlet">
        <description>REST servlet</description>
        <url-pattern>/my-groovy/*</url-pattern>
    </servlet>

    <ao key="ao-entities">
        <entity>ru.mail.jira.plugins.groovy.api.entity.Script</entity>
        <entity>ru.mail.jira.plugins.groovy.api.entity.ScriptDirectory</entity>
        <entity>ru.mail.jira.plugins.groovy.api.entity.Changelog</entity>
        <entity>ru.mail.jira.plugins.groovy.api.entity.ScriptExecution</entity>
        <entity>ru.mail.jira.plugins.groovy.api.entity.Listener</entity>
        <entity>ru.mail.jira.plugins.groovy.api.entity.ListenerChangelog</entity>
        <entity>ru.mail.jira.plugins.groovy.api.entity.AuditLogEntry</entity>
        <entity>ru.mail.jira.plugins.groovy.api.entity.RestScript</entity>
        <entity>ru.mail.jira.plugins.groovy.api.entity.RestChangelog</entity>
        <entity>ru.mail.jira.plugins.groovy.api.entity.FieldConfig</entity>
        <entity>ru.mail.jira.plugins.groovy.api.entity.FieldConfigChangelog</entity>
        <entity>ru.mail.jira.plugins.groovy.api.entity.ScheduledTask</entity>
        <entity>ru.mail.jira.plugins.groovy.api.entity.ScheduledTaskChangelog</entity>
    </ao>

    <workflow-condition
            key="inline-script-condition"
            name="Groovy inline script"
            class="ru.mail.jira.plugins.groovy.impl.workflow.inline.InlineScriptConditionFactory"
    >
        <condition-class>
            ru.mail.jira.plugins.groovy.impl.workflow.ScriptedCondition
        </condition-class>

        <resource
                type="velocity"
                name="view"
                location="ru/mail/jira/plugins/groovy/templates/inline-script-view.vm"
        />
        <resource
                type="velocity"
                name="input-parameters"
                location="ru/mail/jira/plugins/groovy/templates/inline-script-edit.vm"
        />
        <resource
                type="velocity"
                name="edit-parameters"
                location="ru/mail/jira/plugins/groovy/templates/inline-script-edit.vm"
        />
    </workflow-condition>

    <workflow-function
            key="inline-script-function"
            name="Groovy inline script"
            class="ru.mail.jira.plugins.groovy.impl.workflow.inline.InlineScriptFunctionFactory"
    >
        <function-class>
            ru.mail.jira.plugins.groovy.impl.workflow.ScriptedFunction
        </function-class>

        <resource
                type="velocity"
                name="view"
                location="ru/mail/jira/plugins/groovy/templates/inline-script-view.vm"
        />
        <resource
                type="velocity"
                name="input-parameters"
                location="ru/mail/jira/plugins/groovy/templates/inline-script-edit.vm"
        />
        <resource
                type="velocity"
                name="edit-parameters"
                location="ru/mail/jira/plugins/groovy/templates/inline-script-edit.vm"
        />
    </workflow-function>

    <workflow-validator
            key="inline-script-validator"
            name="Groovy inline script"
            class="ru.mail.jira.plugins.groovy.impl.workflow.inline.InlineScriptValidatorFactory"
    >
        <validator-class>
            ru.mail.jira.plugins.groovy.impl.workflow.ScriptedValidator
        </validator-class>

        <resource
                type="velocity"
                name="view"
                location="ru/mail/jira/plugins/groovy/templates/inline-script-view.vm"
        />
        <resource
                type="velocity"
                name="input-parameters"
                location="ru/mail/jira/plugins/groovy/templates/inline-script-edit.vm"
        />
        <resource
                type="velocity"
                name="edit-parameters"
                location="ru/mail/jira/plugins/groovy/templates/inline-script-edit.vm"
        />
    </workflow-validator>

    <workflow-function
            key="registry-script-function"
            name="Groovy registry script"
            class="ru.mail.jira.plugins.groovy.impl.workflow.registry.RegistryScriptFunctionFactory"
    >
        <function-class>
            ru.mail.jira.plugins.groovy.impl.workflow.ScriptedFunction
        </function-class>

        <resource
